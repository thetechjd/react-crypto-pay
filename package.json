{
  "name": "react-crypto-pay",
  "private": false,
  "version": "1.5.0",
  "author": "The TechJD",
  "license": "MIT",
  "description": "Api for evm-chain crypto payment integration.",
  "main": "./dist/react-crypto-pay.umd.js",
  "module": "./dist/react-crypto-pay.es.js",
  "exports": {
    ".": {
      "import": "./dist/react-crypto-pay.es.js",
      "require": "./dist/react-crypto-pay.umd.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thetechjd/react-crypto-pay.git"
  },
  "keywords": [
    "react",
    "crypto",
    "evm",
    "wallet"
  ],
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint . --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest run",
    "watch": "vitest"
  },
  "dependencies": {
    "@coinbase/wallet-sdk": "^3.7.2",
    "@walletconnect/ethereum-provider": "^2.11.2",
    "axios": "^1.6.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "styled-components": "^6.1.8",
    "web3": "^4.5.0",
    "web3modal": "^1.9.12"
  },
  "devDependencies": {
    "@testing-library/react": "^14.2.1",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
